        <Button
            android:id="@+id/MaxSumPathNC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="MaxSumPathNC"
            android:text="@string/maxSumPathNCHeading"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:layout_below="@+id/transpose"
            android:textSize="20sp" />

        <Button
            android:id="@+id/minor_swap_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button1"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="SwapMinorDiagonal"
            android:text="@string/minorswapheading"
            android:textAlignment="gravity"
            android:layout_below="@+id/MaxSumPathNC"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/minor_swap_button"
            android:background="@drawable/custom_button"/>


    </RelativeLayout>

</ScrollView>