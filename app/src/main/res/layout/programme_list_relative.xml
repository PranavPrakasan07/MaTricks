<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    android:id="@+id/scrollviewPrograms"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background6"
    tools:context=".Programme_list">

    <RelativeLayout
        android:id="@+id/listrelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="goToCategoriesCoder"
            android:text="@string/back_button"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/rotate90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button1"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="Rotate"
            android:text="@string/rotate_90_button"
            android:textAlignment="gravity"
            android:layout_below="@id/back_button"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/AntiSpiral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rotate90"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="AntiSpiral"
            android:text="@string/anti_spiral_printing_button"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Spiral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button1"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="Spiral"
            android:text="@string/spiral_printing_button"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:layout_below="@+id/AntiSpiral"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ZigZag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="ZigZag"
            android:text="@string/zig_zag_printing_button"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:layout_below="@+id/Spiral"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ZPrinting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button1"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="ZPrinting"
            android:text="@string/button_3"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:layout_below="@+id/ZigZag"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Stochastic_matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="StochasticMatrix"
            android:text="@string/stochastic_matrix_heading"
            android:textAlignment="gravity"
            android:textColor="#FFF"
            android:layout_below="@+id/ZPrinting"
            android:textSize="20sp" />

<!--        <Button-->
